
class Animal {
    void sound() {
        System.out.println("Animal makes a sound");
    }
}
class Dog extends Animal {
    void sound() {
        System.out.println("Dog barks");
    }
}
public class OverridingExample {
    public static void main(String[] args) {
        Animal a = new Animal();  
        Dog d = new Dog();       
        d.sound();                
        Animal ad = new Dog();    
        ad.sound();               
    }
}
